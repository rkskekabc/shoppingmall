<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="product">
	
	<insert id="insert" parameterType="productvo">
		<![CDATA[
			insert into product(option_no, category_no, type, name, explanation, reg_date)
			 values(#{optionNo }, #{categoryNo }, #{type }, #{name }, #{explanation }, now())
		]]>
		<selectKey keyProperty="no" resultType="long" order="AFTER">
			<![CDATA[
			select last_insert_id()
			]]>
		</selectKey>
	</insert>

	<select id="getByNo" resultType="membervo" parameterType='long'>
		<![CDATA[
		select no, name, parent_no
		  from category
		 where no = #{value }
		]]>
	</select>
	
	<update id="update" parameterType="categoryvo">
		<![CDATA[
		update category
			set name = #{name }, parent_no=#{parentNo }
		]]>
	</update>
	
	<delete id="delete" parameterType="long">
		<![CDATA[
		delete from category where no = #{value }
		]]>
	</delete>
</mapper>
